<style>
  .main {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

	.tag-pill {
	display: inline-flex;
	align-items: center;
	gap: 0.35rem;
	}

  .grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .card {
	background: linear-gradient(
		180deg,
		rgba(16, 19, 37, 0.98),
		rgba(8, 10, 26, 0.95)
	);
	border-radius: 1rem;
	padding: 1.7rem;
	border: 1px solid rgba(148, 163, 184, 0.28);
	transition: border-color 0.25s ease, transform 0.25s ease,
		box-shadow 0.25s ease;
	}

	.card:hover {
	border-color: rgba(236, 95, 169, 0.55);
	box-shadow: 0 14px 40px rgba(5, 6, 23, 0.9);
	transform: translateY(-2px);
	}

  .card h3 {
    margin-top: 0;
  }

  .card p {
    color: var(--text-muted);
  }

  .card ul {
    margin-top: 0.75rem;
    padding-left: 1.25rem;
  }

  @media (max-width: 900px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }

  /* Centers the whole intro section in the page */
	.intro-wrapper {
	display: flex;
	justify-content: center;
	margin: 3rem 0 3.5rem;
	}

	/* The panel itself */
	.intro-panel {
	max-width: 780px;
	width: 100%;
	background: radial-gradient(circle at top, #151833 0%, #050617 80%);
	border-radius: 1.1rem;
	padding: 2rem 2.25rem;
	text-align: center;
	border: 1px solid rgba(236, 95, 169, 0.5);
	box-shadow:
		0 0 0 1px rgba(236, 95, 169, 0.15),
		0 22px 55px rgba(5, 6, 23, 0.95);
	}

	/* Text */
	.intro-text {
	color: var(--text-muted);
	line-height: 1.6;
	margin: 0.75rem 0 1.4rem;
	}

	/* Tags */
	.intro-tags {
	display: flex;
	flex-wrap: wrap;
	gap: 0.5rem;
	justify-content: center;
	}

	.intro-tags span {
	padding: 0.4rem 0.95rem;
	border-radius: 999px;
	font-size: 0.76rem;
	border: 1px solid rgba(236, 95, 169, 0.45);
	background: rgba(15, 23, 42, 0.9);
	color: #f9fafb;
	letter-spacing: 0.03em;
	}

	.card-header {
	display: flex;
	align-items: center;
	gap: 0.6rem;
	}

	.card-icon {
	width: 20px;
	height: 20px;
	color: var(--accent);
	flex-shrink: 0;
	}

	.intro-logos {
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 1.4rem;
	margin-bottom: 1.5rem;
	}

	.intro-logos img {
	height: 34px;
	width: auto;
	opacity: 0.9;
	filter: drop-shadow(0 6px 16px rgba(0, 0, 0, 0.35));
	}

	/* Slightly smaller on mobile */
	@media (max-width: 600px) {
	.intro-logos img {
		height: 26px;
	}
	}

	.intro-actions {
	margin-top: 1.5rem;
	display: flex;
	justify-content: center;
	}

	.btn-primary {
	padding: 0.6rem 1.4rem;
	border-radius: 999px;
	font-size: 0.85rem;
	color: #fff;
	border: 1px solid rgba(236, 95, 169, 0.7);
	background: linear-gradient(
		135deg,
		rgba(236, 95, 169, 0.25),
		rgba(236, 95, 169, 0.05)
	);
	box-shadow: 0 10px 30px rgba(236, 95, 169, 0.25);
	transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.btn-primary:hover {
	transform: translateY(-1px);
	box-shadow: 0 14px 36px rgba(236, 95, 169, 0.45);
	}

	@media (max-width: 768px) {
	/* Bring the panel closer and give side padding */
	.intro-wrapper {
		margin: 1.5rem 0 2rem;
		padding: 0 1rem;
	}

	.intro-panel {
		padding: 1.5rem 1.25rem;
		border-radius: 0.9rem;
	}

	/* Allow the logos to wrap and be smaller */
	.intro-logos {
		flex-wrap: wrap;
		gap: 0.7rem;
		margin-bottom: 1.1rem;
	}

	.intro-logos img {
		height: 24px;  /* was ~34px */
		filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.3));
	}

	/* Slightly smaller heading & body text for narrow screens */
	.intro-panel h2 {
		font-size: 1.25rem;
	}

	.intro-text {
		font-size: 0.9rem;
	}

	/* Tags: tighter spacing so they donâ€™t overflow */
	.intro-tags {
		gap: 0.4rem;
	}

	.intro-tags span {
		padding: 0.3rem 0.8rem;
		font-size: 0.7rem;
	}

	/* CV button spacing */
	.intro-actions {
		margin-top: 1.2rem;
	}
	}

</style>
