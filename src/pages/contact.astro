---
import Layout from "../components/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Contact – Shara Mae">
  <Header />

  <main class="shell">
    <section class="panel-wrapper">
      <div class="panel contact-panel">
        <h2>Let’s connect</h2>
        <p class="contact-text">
          I’m open to opportunities around AI engineering, backend APIs, Microsoft 365
          solutions, and full-stack projects – especially in healthcare, modern workplace,
          and enterprise automation.
        </p>

        <div class="contact-items">
          <div>
            <h3>Email</h3>
            <a href="mailto:youremail@example.com">youremail@example.com</a>
          </div>
          <div>
            <h3>LinkedIn</h3>
            <a href="https://www.linkedin.com">linkedin.com/in/your-profile</a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .contact-text {
    margin-bottom: 1.5rem;
    color: var(--text-muted);
  }

  .contact-items {
    display: flex;
    flex-wrap: wrap;
    gap: 2.5rem;
    justify-content: center;
  }

  .contact-items h3 {
    margin-bottom: 0.3rem;
  }

  .contact-items a {
    font-size: 0.95rem;
  }
</style>
